<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AuthActivity"
        android:background="@color/ColorBackground">

    <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:src="@drawable/ic_icon"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.053" app:layout_constraintHorizontal_bias="0.497"
            android:id="@+id/imageView2"/>

    <EditText
            android:id="@+id/ET_username"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:hint="Логин"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintVertical_bias="0.01"/>
    <EditText
            android:id="@+id/ET_password"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:hint="Пароль"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@+id/ET_username" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/B_auth"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:text="Войти"
            app:layout_constraintTop_toBottomOf="@+id/ET_password" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/start_button_design"
            android:textColor="#FFFFFF"/>
    <Button
            android:id="@+id/B_reg"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            app:layout_constraintTop_toBottomOf="@+id/B_auth" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/start_button_design" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.035"
            android:textColor="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>