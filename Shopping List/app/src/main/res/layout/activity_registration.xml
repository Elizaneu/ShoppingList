<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity"
        android:background="@color/ColorBackground">

    <EditText
            android:id="@+id/ET_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintVertical_bias="0.211"
            android:hint="username" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:id="@+id/ET_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            android:hint="email" app:layout_constraintTop_toBottomOf="@+id/ET_username"/>
    <EditText
            android:id="@+id/ET_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            android:hint="password"
            android:inputType="textPassword" app:layout_constraintTop_toBottomOf="@+id/ET_email"/>
    <Button
            android:id="@+id/B_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Регистрация" tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ET_password"
            android:background="@drawable/start_button_design"
            android:textColor="#FFFFFF"/>


</androidx.constraintlayout.widget.ConstraintLayout>